{
  "name": "db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema/*": {
      "types": "./dist/schema/*.d.ts",
      "default": "./src/schema/*.ts"
    },
    "./actions/*": {
      "types": "./dist/actions/*.d.ts",
      "default": "./src/actions/*.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm with-env tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm with-env tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:studio": "pnpm with-env drizzle-kit studio"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.6.0",
    "pg": "^8.13.1",
    "uuidv7": "^1.0.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.4",
    "drizzle-kit": "^0.28.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
