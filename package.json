{
  "name": "monorepo-nextjs-scaffold",
  "private": true,
  "scripts": {
    "build": "turbo build --env-mode=loose",
    "dev": "turbo dev --env-mode=loose",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui": "pnpm --filter ui ui",
    "db:generate": "pnpm --filter db db:generate",
    "db:migrate": "pnpm --filter db db:migrate",
    "db:studio": "pnpm --filter db db:studio"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "turbo": "^2.3.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {}
}
